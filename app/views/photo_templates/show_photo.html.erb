<h1>Photo Details</h1>

<dl>
  
  <dt>Image</dt>
    <dd><img src="<%= @match_photo.image%>"</dd>

  <dt>Caption</dt>
    <dd><%= @match_photo.caption%></dd>

  <dt>Owner</dt>
    <dd><%= @match_photo.poster.username %></dd>

  <dt>Posted</dt>
    <dd><%= @match_photo.created_at %></dd>

  <dt>Edit photo</dt>
    <dd>
    <form action="/update_photo/<%= @match_photo.id %>">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value="<%= @match_photo.image %>">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."><%= @match_photo.caption %></textarea>

      <button>Update photo</button>
    </form>
      </dd>

  <dt>Delete photo</dt>
    <dd><a href="/delete_photo/<%= @match_photo.id %>"> Delete this photo </a></dd>

</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  
  <% @match_photo.comments.each do |a_comment| %>

  <tr>
    <td>
    <%= a_comment.commenter.username%>
    </td>

    <td>
     <%= a_comment.body %>
    </td>

    <td>
    <%= a_comment.created_at %>
    </td>

    <% end %>
  </tr>

  </table>

  <h3>Add a new comment</h3>

<form action="/insert_comment_record">
  <label for="browser_photo_id">Photo ID</label>
  <input id="browser_photo_id" type="text" value="<%= @match_photo.id%>" name="input_photo_id">

  <label for="browser_author_id">Author ID</label>
  <input id="browser_author_id" type="text" name="input_author_id">

  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="input_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
